{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "./src", // Assuming your .ts files are in src
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true // If you import JSON directly
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}